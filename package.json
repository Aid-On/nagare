{
  "name": "@aid-on/nagare",
  "version": "0.1.0",
  "description": "WASM-first, stream-centric library for edge computing",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./wasm": {
      "types": "./pkg/nagare.d.ts",
      "import": "./pkg/nagare_bg.wasm",
      "require": "./pkg/nagare_bg.wasm"
    },
    "./durable-objects": {
      "types": "./dist/durable-objects/index.d.ts",
      "import": "./dist/durable-objects/index.mjs",
      "require": "./dist/durable-objects/index.js"
    }
  },
  "files": [
    "dist",
    "pkg",
    "src"
  ],
  "type": "module",
  "scripts": {
    "build:wasm": "wasm-pack build --target web --out-dir pkg --no-default-features --features web_min",
    "build:wasm:node": "wasm-pack build --target nodejs --out-dir pkg-node --no-default-features --features web_min",
    "build:ts": "tsc && vite build",
    "build": "npm run build:wasm && npm run build:ts",
    "test": "vitest run",
    "test:wasm": "npm run build:wasm:node && cross-env NAGARE_TEST_REAL_WASM=true vitest run",
    "test:node": "node --test tests/*.test.js",
    "test:browser": "vitest --browser",
    "bench": "node benches/benchmark.js",
    "bench:std": "npm run build:ts && node benches/standard-suite.mjs",
    "build:ts:only": "tsc",
    "bench:std:src": "npm run build:ts:only && node --experimental-specifier-resolution=node benches/standard-suite-src.mjs",
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "demo": "vite --config demo/vite.config.js",
    "demo:build": "vite build --config demo/vite.config.js",
    "demo:preview": "vite preview --config demo/vite.config.js"
  },
  "keywords": [
    "wasm",
    "webassembly",
    "stream",
    "reactive",
    "edge",
    "cloudflare",
    "durable-objects",
    "simd",
    "performance"
  ],
  "author": "Aid-On",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aid-On/nagare.git"
  },
  "homepage": "https://aid-on.github.io/nagare/",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/browser": "^1.2.1",
    "eslint": "^8.56.0",
    "terser": "^5.44.0",
    "cross-env": "^7.0.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-wasm": "^3.3.0",
    "vitest": "^1.2.1",
    "wasm-pack": "^0.12.1"
  },
  "dependencies": {
    "rxjs": "^7.8.2"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@cloudflare/workers-types": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
